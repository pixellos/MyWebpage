@using MyWebpage.Abstract
@model MyWebpage.Models.ViewModels.IUserInput

@{
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
<div id="result"></div>
@using (Ajax.BeginForm("AddUser",  new AjaxOptions() { UpdateTargetId = "result" ,InsertionMode = InsertionMode.Replace}))
{
    <fieldset>
     
        <h3>Dodaj użytkownika</h3>
        <div class="col-xs-4">
            <div class="text-center">Nazwa Użytkownika</div>
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        </div>
        <div class="col-xs-4">
            <div class="text-center">Hasło</div>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        </div>
        <div class="col-xs-4">
            <div class="text-center">EMail</div>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </div>
        <br />
        <input type="submit" class="btn btn-default" value="Dodaj" />
    </fieldset>

}

<script src="https://raw.githubusercontent.com/aspnet/jquery-ajax-unobtrusive/master/jquery.unobtrusive-ajax.js" type="text/javascript"></script>