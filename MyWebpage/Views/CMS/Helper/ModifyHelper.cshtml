@model MyWebpage.Abstract.IProject

<div>
    @using (Ajax.BeginForm("FinishProjectModify",new AjaxOptions(){UpdateTargetId = "ToModify"+Model.Id,InsertionMode = InsertionMode.Replace}))
    {
        <div>
            <div class="container">
                <div >
                    @Html.TextBoxFor(m => m.Id, new {@class = "form-control"})
                    <p>ID</p>
                </div>
                <div>
                    @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})<p>Nazwa</p>
                </div>
                <div >
                    @Html.TextBoxFor(m => m.PhotoAdress, new {@class = "form-control"})<p>Adres zdjęcia</p>
                </div>
                <div>
                    @Html.TextBoxFor(m => m.GitHubLink, new {@class = "form-control"})<p>Adres do Githuba</p>
                </div>

                <div>
                    @Html.TextAreaFor(m => m.Article, new {@class = "form-control"})<p>Treść o projekcie</p>
                </div>
                <div >
                    <input type="submit" value="Dodaj" class="btn btn-default"/>
                </div>
            </div>
        </div>
    }
</div>
