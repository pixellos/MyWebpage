    var imgsInterval;

    function ShakeIt(elementId) {
        this.hook = document.getElementById(elementId);
        this.deg = 0;
        this.intervalHandler = null;
    }

    ShakeIt.prototype.Shake = function(degree) {
        this.deg = (this.deg + degree) % 360;
        this.hook.style.transform = "skew(-"+ this.deg+"deg"+"," + this.deg + "deg)";
        this.hook.style.transform.skewY = this.deg + "deg";
    }

    function CanRotate(elementId) {
        this.hook = document.getElementById(elementId);
        this.deg = 0;
        this.intervalHandler = null;
        
    }

    CanRotate.prototype.rotateThis = function(deg) {
        this.deg = (this.deg + deg) % 360;
        this.hook.style.transform = "rotate(" + this.deg + "deg";
}
    CanRotate.prototype.StartRotate = function(degree, perTime) {
        this.intervalHandler = setInterval(() => {
            this.rotateThis(degree);
        }, perTime);
    }

    CanRotate.prototype.StopRotate = function() {
        clearInterval(this.intervalHandler);
    }

    function CanWordSpace(elementId) {
        this.hook = document.getElementById(elementId);
        this.spaceing = 1;
        this.intervalHandler = null;

        this.spaceThis = function(space) {
            this.spaceing += space;
            if (this.spaceing < 1) {
                this.spaceing = 1;
            }
            this.hook.style.wordSpacing = this.spaceing + "px";
        }
    }
    CanWordSpace.prototype.ChangeSpaceing = function(space, perTime) {
        clearInterval(this.intervalHandler);
        this.intervalHandler = setInterval(() => {
            this.spaceThis(space);
        },perTime);
    }

    var ShakeMyPhoto = new ShakeIt('myPhoto');
