@using RoadToCode.Models.Blog
@model CreatePostViewModel
@{
    Layout = "";
}

<div class="card-panel hoverable" tag="@Model.Category">
    <div class="card-panel flex-text post">
        <div class="card-panel">
            <div class="row">
                <div class="col s4 img-responsive">
                    <img src="@Model.Picture"/>
                </div>
                <h3 class="col s5"><a href="/Blog/Post/@Model.NormalizedTitle">@Html.Raw(Model.Title)<a/></h3>
                <h6 class="col s3">przez <a href="#">Pixela</a> <small>@Model.Added </small></h6>
            </div>
        </div>
        <div class="markdown">@Model.Content </div>
    </div>
</div>